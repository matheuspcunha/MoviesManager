<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDarkGray">

    <FrameLayout
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="230dp">

        <ImageView
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_gradient_bottom" />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/informations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/univiapro_bold"
            android:textColor="@android:color/white"
            android:textSize="25dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/icons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/image"
        android:layout_below="@id/informations">

        <TextView
            android:id="@+id/duration_genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/univiapro_book"
            android:textColor="@android:color/white"
            android:textSize="13dp"
            android:gravity="start"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp">

            <ImageView
                android:id="@+id/watchedIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:background="@drawable/uncheck" />

            <ImageView
                android:id="@+id/listIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:background="@drawable/add_to_list" />

            <ImageView
                android:id="@+id/playIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:background="@drawable/play" />

            <ImageView
                android:id="@+id/mapIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:background="@drawable/map" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/back"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/resume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/icons"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/univiapro_medium"
            android:text="Sinopse"
            android:textColor="@android:color/white"
            android:layout_marginBottom="5dp"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/text_resume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/univiapro_book"
            android:textColor="@android:color/white"
            android:textSize="13dp" />

    </LinearLayout>

</RelativeLayout>