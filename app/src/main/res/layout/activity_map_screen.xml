<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDarkGray">

    <RelativeLayout
        android:id="@+id/ll_map"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical">

        <fragment xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".view.MapScreenActivity" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:background="@drawable/background_gradient_bottom" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/descriptions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_map">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/univiapro_medium"
            android:layout_alignParentTop="true"
            android:text="Estes são os cinemas mais próximos à sua localização, exibindo este filme."
            android:textColor="@android:color/white"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/buy_tickets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/text"
            android:background="@drawable/background_shape_gray"
            android:gravity="center"
            android:padding="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/univiapro_regular"
                android:text="Comprar Ingressos"
                android:textColor="@android:color/white"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:background="@drawable/ingresso"/>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
